@model PROJECT_MVC.Models.ChangePwd
@{
    ViewBag.Title = "Password_Load";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center>
    <div>

        @using (Html.BeginForm("Password_Click", "ChangePassword", FormMethod.Post))
        {
            <div><img src="~/PHS/bannermvc.jpg" width="1100px" /></div>
            <br />
            <h2>Change Password</h2>
            <div>
                <label>Old Password:</label>
            </div>
            <div>
                @Html.TextBoxFor(m => m.OldPassword)
                @Html.ValidationMessageFor(m => m.OldPassword)
            </div>
            <div>
                <label>New Password:</label>
            </div>
            <div>
                @Html.TextBoxFor(m => m.NewPassword)
                @Html.ValidationMessageFor(m => m.NewPassword)

            </div>
            <div>
                <label>Confirm Password:</label>
            </div>
            <div>
                @Html.TextBoxFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
            <div>
                <input id="Submit1" type="submit" value="Change Password" />
                <br />
                @Html.DisplayFor(m => m.msg)
            </div>
            <div>
                @Html.ActionLink("Back Home", "Home", "Login")
            </div>
        }
    </div>
</center>
